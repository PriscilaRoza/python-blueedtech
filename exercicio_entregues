def tracinhos():  # separador com traços
    print('¨¨¨¨'*20)


tracinhos()
a = int(input('digite um numero: '))
b = int(input('digite outro numero: '))
tracinhos()
print(f'VOCÊ DIGITOU OS NÚMEROS {a} E {b}')
tracinhos()
S = a+b
print(f'O RESULTADO DA SOMA É: {S}')
tracinhos()
if a > b:
    print(f'O MAIOR NÚMERO É: {a}')
    tracinhos()
else:
    print(f'O MAIOR NÚMERO É: {b}')
    tracinhos()
if S % 2 == 0:
    print(f'O VALOR {S} É PAR')
else:
    print(f'O VALOR {S} É ÍMPAR')
tracinhos()
M = a*b
print('MULTIPLICANDO FICA ASSIM:')
